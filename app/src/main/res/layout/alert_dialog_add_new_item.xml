<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@drawable/alert_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_new_edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/alert_dialog_new_item"
            android:textSize="20dp"
            android:textColor="@color/color_Primary_500"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/itemName_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="@string/Name_Item"
            android:textColor="@color/black"
            android:background="@android:drawable/edit_text"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/itemDescr_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="@string/Description"
            android:textColor="@color/black"
            android:background="@android:drawable/edit_text"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/itemTypology_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="@string/Tipology"
            android:textColor="@color/black"
            android:background="@android:drawable/edit_text"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:drawable/edit_text">

            <Spinner
                android:id="@+id/itemArea_alert_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Area"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="normal" />

        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/route_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="#D3D3D3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_add_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="140dp"
                android:background="@drawable/alert_dialog_add_img_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">


            <Button
                android:id="@+id/ad_button_do"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/bt_do_alert_dialog" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.malfaang.e_culture_tool_a">

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
<!--EculturetoolA-->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_app_ok"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app_ok"
        android:supportsRtl="true"
        android:theme="@style/Theme.EculturetoolA"
        tools:targetApi="31"
        android:hardwareAccelerated="false">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".Fotocamera"
            android:exported="false" />
        <activity
            android:name=".login.logout"
            android:exported="false" />
        <activity
            android:name=".login.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".qrCode.CaptureAct"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <activity android:name=".qrCode.qrcodeActivity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".login.LoginActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".routes.Add_Route"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".routes.Add_Area_To_Route"
            android:parentActivityName=".routes.Add_Route" />

        <activity
            android:name=".sito.NewSite"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".addElements.AddElements"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".routes.AreaInfo"
            android:parentActivityName=".routes.Add_Route" />

        <activity
            android:name=".routes.Item_Info"
            android:parentActivityName=".routes.Add_Route" />

        <activity
            android:name=".routes.Show_Route"
            android:parentActivityName=".routes.Add_Area_To_Route" />

        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EculturetoolA.NoActionBar" />

        <activity
            android:exported="true"
            android:name=".Splash_Screen"
            android:theme="@style/Theme.EculturetoolA.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Preference" />
    </application>

</manifest>